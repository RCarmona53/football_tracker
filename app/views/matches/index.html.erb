<h1>Matches</h1>

<% if @matches.present? %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Location</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @matches.each do |match| %>
        <tr>
          <td><%= match.date.strftime('%Y-%m-%d') %></td>
          <td><%= match.location %></td>
          <td><%= link_to 'Edit', edit_match_path(match) %> | <%= button_to 'Delete', match_path(match), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No matches found.</p>
<% end %>

<%= link_to 'Back to Main', root_path, class: 'button' %>
