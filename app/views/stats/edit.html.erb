<h1>Edit Stat for <%= @player.first_name %> <%= @player.last_name %></h1>

<%= form_with(model: [@player, @stat], local: true) do |form| %>
  <% if @stat.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@stat.errors.count, "error") %> prohibited this stat from being saved:</h2>

      <ul>
        <% @stat.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :goals %>
    <%= form.number_field :goals %>
  </div>

  <div class="field">
    <%= form.label :assists %>
    <%= form.number_field :assists %>
  </div>

  <div class="field">
    <%= form.label :rating %>
    <%= form.number_field :rating, step: 0.1 %>
  </div>

  <div class="field">
    <%= form.label :present %>
    <%= form.check_box :present %>
  </div>

  <div class="actions">
    <%= form.submit "Update Stat" %>
  </div>
<% end %>

<%= link_to 'Back', player_stats_path(@player) %>
