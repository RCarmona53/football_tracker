<h1>Match Stats for <%= @player.first_name %> <%= @player.last_name %></h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Location</th>
      <th>Goals</th>
      <th>Assists</th>
      <th>Rating</th>
      <th>Presence</th>
      <% if current_user.admin? %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @stats.each do |stat| %>
      <tr>
        <td><%= stat.match.date.strftime('%Y-%m-%d') if stat.match %></td>
        <td><%= stat.match.location if stat.match %></td>
        <td><%= stat.goals %></td>
        <td><%= stat.assists %></td>
        <td><%= stat.rating %></td>
        <td><%= stat.present ? 'Yes' : 'No' %></td>
        <% if current_user.admin? %>
          <td>
            <%= link_to 'Edit', edit_player_stat_path(@player, stat) %>
            <%= button_to 'Delete', player_stat_path(@player, stat), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.admin? %>
  <div class="actions">
    <%= link_to 'Add Stats', new_player_stat_path(@player) %>
  </div>
<% end %>

<%= link_to 'Back to Players', players_path %>
